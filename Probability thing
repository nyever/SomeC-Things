// Example program
#include <iostream>
#include <string>
#include <cmath>
#include <list>
#include <cstdio>
int main()
{
    std::string DiceOrCoin;
    int x;
     
    std::cout << "Are we flipping a coin or rolling a dice?: ";
    std::getline(std::cin,DiceOrCoin);
    if(DiceOrCoin == "coin" or DiceOrCoin == "Coin"){
            int WhatDoYouWantToFindCOIN;
            std::cout << "What do you want to find? \nChance of heads(TYPE 1) \nChance of tails(TYPE 2) \nChance of only Heads(TYPE 3) \nChance of only Tails(TYPE 4) \nAnswer: ";
            std::cin >> WhatDoYouWantToFindCOIN;
            if(WhatDoYouWantToFindCOIN == 1){
                std::cout << "How many coin tosses will there be?: ";
                std::cin >> x;
                float a; 
                a = 100*(pow(2,x)-1)/pow(2,x); 
                std::cout <<"Your change of getting at least one head is " << a << "%";
                exit(0); }
            
            if(WhatDoYouWantToFindCOIN == 2){
                std::cout << "How many coin tosses will there be?: ";
                std::cin >> x;
                float a; 
                a   = 100*(pow(2,x)-1)/pow(2,x); 
                std::cout <<"Your change of getting at least one tails is " << a << "%";
                exit(0); }
            
            if(WhatDoYouWantToFindCOIN ==  3 ){
                std::cout << "How many coin tosses will there be?: ";
                std::cin >> x;
                float a; 
                a = 100/pow(2,x); 
                std::cout <<"Your change of getting at only heads is " << a << "%";
                exit(0); }
            
            if(WhatDoYouWantToFindCOIN == 4){
                std::cout << "How many coin tosses will there be?: ";
                std::cin >> x;
                float a; 
                a = 100/pow(2,x); 
                std::cout <<"Your change of getting at only tails is " << a << "%";
                exit(0); }

        }
    else if(DiceOrCoin == "dice" or DiceOrCoin == "Dice") {
        int WhatDoYouWantToFindOutDICE;
        int NumberOfDiceSides;
        int NumberOfRolls;
        int NumberYouWant;
        std::cout<< "What do you want to find out? \nChance of rolling number at least once(TYPE 1) \n Chance of never rolling a number(TYPE 2) \nChance of only rolling a number(TYPE 3)";
        if(WhatDoYouWantToFindOutDICE == 1){
        std::cout<< "How many sides should the dice have?: "; 
        std::cin>>NumberOfDiceSides;
        std::cout<<"How many times do you want to roll?: "; 
        std::cin>>NumberOfRolls;
        std::cout<<" What number do you want?: ";
        std::cin>>NumberYouWant;
        std::cout<<"the chance of getting " << NumberYouWant << " at leat once is " << 100*(pow(NumberOfDiceSides-1, NumberOfRolls)-1)/(pow(NumberOfDiceSides,NumberOfRolls))<< "%";
        exit(0);}
        }
    return 0;
}
